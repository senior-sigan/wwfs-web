{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:ws --external:zod",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "ws": "^8.13.0",
    "zod": "^3.21.4",
    "cat-lib": "workspace:*",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "@babel/core": "^7.21.4",
    "eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@types/ws": "^8.5.4",
    "typescript": "^5.0.3",
    "esbuild": "^0.17.14",
    "nodemon": "^2.0.22"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.test.ts"
    ],
    "ext": "ts,mjs,js,json",
    "exec": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:ws --external:zod && node dist/index.js"
  }
}
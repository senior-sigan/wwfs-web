{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "tsup src/index.ts --format cjs --watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "build": "tsup src/index.ts --format cjs",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "ws": "^8.13.0",
    "zod": "^3.21.4",
    "cat-lib": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "eslint-config-custom": "workspace:*",
    "eslint": "^8.36.0",
    "tsconfig": "workspace:*",
    "@types/node": "^18.15.0",
    "@types/ws": "^8.5.4",
    "typescript": "^4.9.5",
    "tsup": "^6.7.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.test.ts"
    ],
    "ext": "ts,mjs,js,json",
    "exec": "tsc --noUnusedParameters false --noUnusedLocals false && node ./dist/index.js"
  }
}